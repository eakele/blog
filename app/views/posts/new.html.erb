<% if session[:user_id].nil?%>
<h1>Login</h1>
<%= form_tag '/login' do%>
<% if flash[:error] %>
<p><%= flash[:error]%></p><br>
<% end %>
<p>
<%=label_tag :email%><br>
<%= text_field_tag :email%><br>
</p>
<p>
<%=label_tag :password%><br>
<%= password_field_tag :password%><br>
</p>
<%= submit_tag "Log In"%>
<% end %>
<%else%>
<h1>New posts</h1>
<%=form_for :post, url: '/posts' do |f| %>
<p>
  <%=f.label :title%><br>
  <%=f.text_field :title%>
</p>
<p>
  <%=f.label :content%><br>
  <%= f.text_area :content %>
</p>
<p>
  <%=f.label :image%><br>
  <%= f.text_field :image %>
</p>
<p>
  <%=f.label :category%><br>
  <%= f.text_field :category %>
</p>
<p>
  <%=f.submit%>
</p>
<% end %>
<% end %>
