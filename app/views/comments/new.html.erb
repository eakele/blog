<% if session[:user_id].nil?%>
<h1>Login</h1>
<%= form_tag '/login' do%>
<p>
<%=label_tag :email%><br>
<%= text_field_tag :email%><br>
</p>
<p>
<%=label_tag :password%><br>
<%= password_field_tag :password%><br>
</p>
<%= submit_tag "Log In"%>
<% end %>
<%else%>
<h1>Comment form</h1>
<a href="/">Home</a>
<%=form_for :comment, url: '/comments' do |f| %>
<input type="hidden" name="hidden_post_id" value="<%= params[:post_id] %>"/>
<p>
    <%=f.label :content%><br>
    <%=f.text_area :content%>
</p>
<p>
    <%= f.radio_button :like, 'true' %>
    Like<br/>
    <%= f.radio_button :like, 'false' %>
    Unlike<br/>
</p>
<p>
    <%=f.submit%>
</p>
<% end %>
<% end %>
